{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Start All Services",
      "type": "shell",
      "windows": {
        "command": "${workspaceFolder}/start-all.bat"
      },
      "linux": {
        "command": "chmod +x ${workspaceFolder}/start-all.sh && ${workspaceFolder}/start-all.sh"
      },
      "osx": {
        "command": "chmod +x ${workspaceFolder}/start-all.sh && ${workspaceFolder}/start-all.sh"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "üõë Stop All Services",
      "type": "shell",
      "windows": {
        "command": "${workspaceFolder}/stop-all.bat"
      },
      "linux": {
        "command": "chmod +x ${workspaceFolder}/stop-all.sh && ${workspaceFolder}/stop-all.sh"
      },
      "osx": {
        "command": "chmod +x ${workspaceFolder}/stop-all.sh && ${workspaceFolder}/stop-all.sh"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "üê≥ Start Infrastructure",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "deploy/docker-compose.yaml", "up", "-d", "mysql", "rabbitmq", "redis"],
      "problemMatcher": []
    },
    {
      "label": "üóÑÔ∏è Stop Infrastructure",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "deploy/docker-compose.yaml", "down"],
      "problemMatcher": []
    },
    {
      "label": "üë§ Start User Service",
      "type": "shell",
      "windows": {
        "command": "gradlew.bat"
      },
      "linux": {
        "command": "./gradlew"
      },
      "osx": {
        "command": "./gradlew"
      },
      "args": [":services:user-service:bootRun"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting.*$",
          "endsPattern": "^.*Started.*Application in.*$"
        }
      }
    },
